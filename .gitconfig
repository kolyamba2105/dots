[user]
  email = haravetskyy@gmail.com
  name = kolyamba2105

[color]
  ui = true

[alias]
  a   = add
  b   = branch
  bd  = branch -d
  c   = commit
  ca  = commit --amend
  can = commit --amend --no-edit
  ch  = checkout
  chb = checkout -b
  cp  = cherry-pick
  cpa = cherry-pick --abort
  cpc = cherry-pick --continue
  d   = diff
  dc  = diff --cached
  l   = log --graph
  p   = push
  pf  = push -f
  pl  = pull
  plr = pull --rebase
  rb  = rebase
  rba = rebase --abort
  rbc = rebase --continue
  rbi = rebase -i
  rbm = rebase master
  rs  = restore
  rss = restore --staged
  s   = status
  sw  = switch

[pager]
  branch = false
  stash = false

[core]
  editor = nvim

[diff]
  tool = nvimdiff

[merge]
  tool = nvimdiff
